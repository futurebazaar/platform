<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:tx="http://www.springframework.org/schema/tx"
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
       		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/tx 
            http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

    
    <!-- Enable @Transactional support -->
    <tx:annotation-driven/>
    
	<!-- Connector beans -->
    <bean id="sapClientConnector" class="com.fb.platform.sap.client.connector.SapClientConnector">
	</bean> 

    <!-- Handler Beans --> 
    <bean id="sapClientHandler" class="com.fb.platform.sap.client.handler.impl.SapClientHandler">
        <property name="sapClientConnector" ref="sapClientConnector"></property>
    </bean>
    
</beans>
