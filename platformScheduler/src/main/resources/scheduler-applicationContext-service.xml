<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:tx="http://www.springframework.org/schema/tx"
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
       		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/tx 
            http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

    
    <!-- Enable @Transactional support -->
    <tx:annotation-driven/>
    
    <!-- Management Beans -->
    <bean id="orderSchedulerMbean" class="com.fb.platform.scheduler.mbean.impl.OrderSchedulerMbeanImpl">
        <property name="orderSchedulerService" ref="orderSchedulerService"/>
    </bean> 

    <!-- Service Beans --> 
    <bean id="orderSchedulerService" class="com.fb.platform.scheduler.service.impl.OrderSchedulerServiceImpl">
        <property name="orderXmlDao" ref="orderXmlDao"></property>
    </bean>
    
</beans>
