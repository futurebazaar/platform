	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>classpath:platformJndi.properties</value>
		</property>
	</bean>
	<bean id="userCredentialFactory" class="org.springframework.jms.connection.UserCredentialsConnectionFactoryAdapter">
		<property name="targetConnectionFactory" ref="connectionFactory"/>
		<property name="username">
			<value>${java.naming.security.principal}</value>
		</property>
		<property name="password">
			<value>${java.naming.security.credentials}</value>
		</property>
	</bean>

    <bean id="jndiTemplate" class="org.springframework.jndi.JndiTemplate" lazy-init="true">
        <property name="environment">
            <props>
                <prop key="java.naming.factory.initial">org.jnp.interfaces.NamingContextFactory</prop>
                <prop key="java.naming.provider.url">${java.naming.provider.url}</prop>
                <prop key="java.naming.factory.url.pkgs">org.jnp.interfaces:org.jboss.naming</prop>
            </props>
        </property>
    </bean>
    <bean id="connectionFactory"
      class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiTemplate">
            <ref bean="jndiTemplate"/>
        </property>
        <property name="jndiName">
            <value>XAConnectionFactory</value>
        </property>
    </bean>

	<bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
		<property name="connectionFactory" ref="userCredentialFactory"/>
	</bean>

	<bean id="inventoryDestination" class="org.hornetq.api.jms.HornetQJMSClient" factory-method="createQueue">
	   <constructor-arg index="0" value="inventory"/>
	</bean>

	<bean id="inventoryListener" class="com.fb.platform.mom.receiver.inventory.InventoryMessageListener"></bean>
	
	<bean id="inventoryContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="userCredentialFactory"/>
		<property name="destination" ref="inventoryDestination"/>
		<property name="messageListener" ref="inventoryListener" />
		<property name="autoStartup" value="false"/>
		<property name="sessionTransacted" value="true"/>
	</bean>

	<bean id="inventorySender" class="com.fb.platform.mom.receiver.inventory.InventorySenderImpl">
        <property name="jmsTemplate" ref="jmsTemplate"/>
        <property name="inventoryDestination" ref="inventoryDestination"/>
	</bean>
	
	<bean id="orderDestination" class="org.hornetq.api.jms.HornetQJMSClient" factory-method="createQueue">
	   <constructor-arg index="0" value="order"/>
	</bean>
	
	<bean id="orderMessageListener" class="com.fb.platform.mom.receiver.order.OrderMessageListener"></bean>
	
	<bean id="orderContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="userCredentialFactory"/>
		<property name="destination" ref="orderDestination"/>
		<property name="messageListener" ref="orderMessageListener" />
		<property name="autoStartup" value="false"/>
		<property name="sessionTransacted" value="true"/>
	</bean>

	<bean id="orderSender" class="com.fb.platform.mom.receiver.order.OrderSenderImpl">
        <property name="jmsTemplate" ref="jmsTemplate"/>
        <property name="orderDestination" ref="orderDestination"/>
	</bean>
	
	<bean id="mailDestination" class="org.hornetq.api.jms.HornetQJMSClient" factory-method="createQueue">
	   <constructor-arg index="0" value="platformMail"/>
	</bean>
	
	<bean id="mailListener" class="com.fb.platform.mom.receiver.mail.MailMessageListener"></bean>
	
	<bean id="mailContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="userCredentialFactory"/>
		<property name="destination" ref="mailDestination"/>
		<property name="messageListener" ref="mailListener" />
		<property name="autoStartup" value="false"/>
		<property name="sessionTransacted" value="true"/>
	</bean>

	<bean id="mailMsgSender" class="com.fb.platform.mom.receiver.mail.MailMsgSenderImpl">
        <property name="jmsTemplate" ref="jmsTemplate"/>
        <property name="mailDestination" ref="mailDestination"/>
	</bean>
	
	<bean id="preDLQDestination" class="org.hornetq.api.jms.HornetQJMSClient" factory-method="createQueue">
	   <constructor-arg index="0" value="preDLQ"/>
	</bean>
	
	<bean id="preDLQListener" class="com.fb.platform.mom.receiver.dlq.PreDLQMessageListener">
	</bean>
	
	<bean id="preDLQContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="userCredentialFactory"/>
		<property name="destination" ref="preDLQDestination"/>
		<property name="messageListener" ref="preDLQListener" />
		<property name="autoStartup" value="false"/>
		<property name="sessionTransacted" value="true"/>
	</bean>
	
	<bean id="dlqDestination" class="org.hornetq.api.jms.HornetQJMSClient" factory-method="createQueue">
	   <constructor-arg index="0" value="platformDLQ"/>
	</bean>
	
	<bean id="corruptDestination" class="org.hornetq.api.jms.HornetQJMSClient" factory-method="createQueue">
	   <constructor-arg index="0" value="corrupt"/>
	</bean>
	
	<bean id="corruptListener" class="com.fb.platform.mom.receiver.corrupt.CorruptMessageListener"></bean>
	
	<bean id="corruptContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="userCredentialFactory"/>
		<property name="destination" ref="corruptDestination"/>
		<property name="messageListener" ref="corruptListener" />
		<property name="autoStartup" value="false"/>
		<property name="sessionTransacted" value="true"/>
	</bean>

	<bean id="corruptSender" class="com.fb.platform.mom.receiver.corrupt.CorruptSenderImpl">
        <property name="jmsTemplate" ref="jmsTemplate"/>
        <property name="corruptDestination" ref="corruptDestination"/>
	</bean>
	
	<bean id="deliveryDeleteDestination" class="org.hornetq.api.jms.HornetQJMSClient" factory-method="createQueue">
	   <constructor-arg index="0" value="deliveryDelete"/>
	</bean>

	<bean id="deliveryDeleteListener" class="com.fb.platform.mom.receiver.delivery.DeliveryDeleteMessageListener"></bean>
	
	<bean id="deliveryDeleteContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="userCredentialFactory"/>
		<property name="destination" ref="deliveryDeleteDestination"/>
		<property name="messageListener" ref="deliveryDeleteListener" />
		<property name="autoStartup" value="false"/>
		<property name="sessionTransacted" value="true"/>
	</bean>

	<bean id="deliveryDeleteSender" class="com.fb.platform.mom.receiver.delivery.DeliveryDeleteSenderImpl">
        <property name="jmsTemplate" ref="jmsTemplate"/>
        <property name="deliveryDeleteDestination" ref="deliveryDeleteDestination"/>
	</bean>
	
	<bean id="itemAckDestination" class="org.hornetq.api.jms.HornetQJMSClient" factory-method="createQueue">
	   <constructor-arg index="0" value="itemAck"/>
	</bean>

	<bean id="itemAckMessageListener" class="com.fb.platform.mom.receiver.itemAck.ItemAckMessageListener"></bean>
	
	<bean id="itemAckContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="userCredentialFactory"/>
		<property name="destination" ref="itemAckDestination"/>
		<property name="messageListener" ref="itemAckMessageListener" />
		<property name="autoStartup" value="false"/>
		<property name="sessionTransacted" value="true"/>
	</bean>

	<bean id="itemAckSender" class="com.fb.platform.mom.receiver.itemAck.ItemAckSenderImpl">
        <property name="jmsTemplate" ref="jmsTemplate"/>
        <property name="itemAckDestination" ref="itemAckDestination"/>
	</bean>
	
    <bean id="momManager" class="com.fb.platform.mom.manager.impl.MomManagerImpl">
        <property name="inventoryListener" ref="inventoryListener"/>
        <property name="inventorySender" ref="inventorySender"/>
        <property name="inventoryContainer" ref="inventoryContainer"/>
        <property name="mailListener" ref="mailListener"/>
        <property name="mailMsgSender" ref="mailMsgSender"/>
        <property name="mailContainer" ref="mailContainer"/>
        <property name="preDLQListener" ref="preDLQListener"/>
        <property name="preDLQContainer" ref="preDLQContainer"/>
        <property name="corruptListener" ref="corruptListener"/>
        <property name="corruptSender" ref="corruptSender"/>
        <property name="corruptContainer" ref="corruptContainer"/>
        <property name="deliveryDeleteListener" ref="deliveryDeleteListener"/>
        <property name="deliveryDeleteSender" ref="deliveryDeleteSender"/>
        <property name="deliveryDeleteContainer" ref="deliveryDeleteContainer"/>
        <property name="itemAckMessageListener" ref="itemAckMessageListener"/>
        <property name="itemAckSender" ref="itemAckSender"/>
        <property name="itemAckContainer" ref="itemAckContainer"/>
        <property name="orderMessageListener" ref="orderMessageListener"/>
        <property name="orderSender" ref="orderSender"/>
        <property name="orderContainer" ref="orderContainer"/>
    </bean>
</beans>
