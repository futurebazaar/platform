<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Transaction manager for JDBC Datasource -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"></property>
    </bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	<bean id="legacyDao" class="com.fb.platform.promotion.dao.legacy.impl.LegacyDaoJdbcImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"/>
	</bean>

	<bean id="ruleDao" class="com.fb.platform.promotion.dao.impl.RuleDaoJdbcImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"/>
	</bean>

	<bean id="promotionDao" class="com.fb.platform.promotion.dao.impl.PromotionDaoJdbcImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"/>
		<property name="ruleDao" ref="ruleDao"></property>
	</bean>

	<bean id="couponDao" class="com.fb.platform.promotion.dao.impl.CouponDaoJdbcImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"/>
	</bean>

	<bean id="couponAdminDao" class="com.fb.platform.promotion.admin.dao.impl.CouponAdminDaoJdbcImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"/>
	</bean>

	<bean id="scratchCardDao" class="com.fb.platform.promotion.dao.impl.ScratchCardDaoJdbcImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"/>
	</bean>
    <!-- Add new DAOs here -->

</beans>
