<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Transaction manager for JDBC Datasource -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"></property>
    </bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	<bean id="promotionBundleDao" class="com.fb.dao.promotion.impl.PromotionBundleDaoJdbcImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"></property>
	</bean>

	<bean id="promotionDao" class="com.fb.dao.promotion.impl.PromotionDaoJdbcImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"/>
		<property name="promotionBundleDao" ref="promotionBundleDao"></property>
	</bean>

    <!-- Add new DAOs here -->

</beans>
