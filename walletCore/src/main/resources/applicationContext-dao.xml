<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Transaction manager for JDBC Datasource -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"></property>
    </bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

    <!-- Add new DAOs here -->
    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location">
            <value>classpath:wallet.properties</value>
        </property>
    </bean>
    <bean id="walletDao" class="com.fb.platform.wallet.dao.impl.WalletDaoImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"/>	
		<property name="userAdminService" ref="userAdminService"/>	
		<property name="mailSender" ref="mailSender"></property>
        <property name="smsSender" ref="smsSender"></property>	
	</bean>
	<bean id="walletTransactionDao" class="com.fb.platform.wallet.dao.impl.WalletTransactionDaoImpl">
		<property name="walletDao" ref="walletDao"/>
		<property name="jdbcTemplate" ref="jdbcTemplate"/>
		<property name="refundExpiryDays">
        	<value>${refund.expiry.days}</value>
        </property>		
	</bean>
	<bean id="springMailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
  		<property name="host" value="MUMOPBL01.fb.dc"/>
        <property name="port" value="25"/>  
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.localhost">mail.pantaloon.com</prop>
            </props>
         </property>
	</bean>
	
    <bean id="mailSender" class="com.fb.commons.mail.MailSender">
	  	<property name="springMailSender" ref="springMailSender"/>
	</bean>
	
	<bean id="smsSender" class="com.fb.commons.sms.SmsSender" />	
</beans>
